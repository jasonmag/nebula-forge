
<div
  class="lg:px-8 md:px-6 md:gap-x-6 shadow px-4 bg-white border-gray-300 border-b gap-x-4 items-center shrink-0 h-16 flex z-40 top-0 sticky">
  <button type="button" class="lg:hidden bg-white p-2 m-2">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
      stroke="currentColor" aria-hidden="true" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5">
      </path>
    </svg></button>
  <div class="bg-gray-900 w-px h-6 lg:hidden" aria-hidden="true"></div>
  <div class="flex lg:gap-6 self-stretch gap-4 flex-1 ">
    <form class="flex flex-1 relative" action="#" method="GET">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"
        class="text-gray-400 w-5 h-full left-0 inset-y-0 absolute pointer-events-none">
        <path fill-rule="evenodd"
          d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z"
          clip-rule="evenodd"></path>
      </svg><input id="search-field"
        class="focus:border-transparent focus:outline-none md:text-sm text-gray-900 pr-0 pl-8 py-0 border-0 w-full h-full block"
        placeholder="Search..." type="search" name="search">
    </form>
    <div class="lg:gap-6 gap-4 items-center flex">
      <button type="button" class="text-gray-400 p-2 m-2 ">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
          stroke="currentColor" aria-hidden="true" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0">
          </path>
        </svg>
      </button>
      <div class="lg:bg-gray-900 lg:w-px lg:h-6 lg:block hidden" aria-hidden="true"></div>
      <div class="relative" data-headlessui-state="">
        <button class="p-1 items-center flex m-1" id="user-menu-button" type="button"
                aria-haspopup="true" aria-expanded="false" data-headlessui-state=""
                onclick="toggleMenu()">  
          <%= render "shared/avatar", resource: current_admin %>
          <span class="lg:items-center lg:flex hidden">
            <span class="color-gray-900 leading-6 font-semibold text-sm ml-4" aria-hidden="true"><%= "#{current_admin.first_name} #{current_admin.last_name}".titleize %></span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                  aria-hidden="true" class="text-gray-400 w-5 h-5 ml-2 ">
              <path fill-rule="evenodd"
                    d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
                    clip-rule="evenodd"></path>
            </svg>
          </span>
        </button>
        <div class="absolute right-0 z-10 mt-2 w-50 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 border-gray-500 focus:outline-none hidden"
              role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1" aria-hidden="true" id="user-menu">
          <!-- Active: "bg-gray-100", Not Active: "" -->
          <%= link_to "Your Profile", "#", class: "block px-4 py-2 text-lg text-gray-700", role: "menuitem", tabindex: "-1", id: "user-menu-item-0" %>
          <%= link_to "Settings", "#", class: "block px-4 py-2 text-lg text-gray-700", role: "menuitem", tabindex: "-1", id: "user-menu-item-1" %>
          <%= link_to "Sign out", destroy_admin_session_path , class: "block px-4 py-2 text-lg text-gray-700", role: "menuitem", tabindex: "-1", id: "user-menu-item-2" %>

        </div>
      </div>                         
    </div>
  </div>
</div>
<script>
  function toggleMenu() {
    var menu = document.getElementById("user-menu");
    menu.classList.toggle("hidden");
  }
</script>