<a href="<%= edit_admins_user_path(user) %>" class="block hover:bg-gray-100">
  <li class="flex justify-between gap-x-6 py-5">
    <div class="flex min-w-0 gap-x-4">
      <%= render "admins/shared/avatar", resource: user %>
      <div class="min-w-0 flex-auto">
        <p class="text-sm font-semibold leading-6 text-gray-900"><%= "#{user.first_name} #{user.last_name}".titleize %></p>
        <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%= user.email %></p>
      </div>
    </div>
    <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
      <p class="text-sm leading-6 text-gray-900"><%= "User" %></p>
      <p class="mt-1 text-xs leading-5 text-gray-500">Last seen <time datetime="<%= user.updated_at %>">3h ago</time></p>
    </div>
  </li>
</a>
