<main class="py-12">
  <div class="lg:px-8 md:px-6 px-4 ">
    <div class="opacity-75 border-gray-400 border-dashed border border-lg overflow-hidden relative h-screen">
      <div class="flex max-w-xl flex-col items-start justify-between" id="<%= dom_id user %>">
        <h2 class="my-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
          <%= "#{user.first_name} #{user.last_name}" %>
        </h2>
        
        <!-- email -->
        <p class="mt-1 text-sm leading-6 text-gray-600"><%= user.email %></p>
      
        <!-- change password link -->
        <%= link_to "Change Password", edit_user_registration_path, class: "mt-2 text-sm leading-6 text-blue-500 hover:text-blue-700" %>
      </div>
    </div>
  </div>
</main>