<main class="py-12">
  <div class="lg:px-8 md:px-6 px-4 ">
    <div class="opacity-75 border-gray-400 border-dashed border border-lg overflow-hidden relative h-screen">
      <ul role="list" class="divide-y divide-gray-100 mx-4 my-2">
        <% @users.each do |user| %>
          <li class="flex justify-between gap-x-6 py-5">
            <div class="flex min-w-0 gap-x-4">
              <!-- Replace 'user.avatar_url' with the attribute holding the URL for the user's avatar -->
              <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
              <div class="min-w-0 flex-auto">
                <!-- Replace 'user.name' with the attribute holding the user's name -->
                <p class="text-sm font-semibold leading-6 text-gray-900"><%= "#{user.first_name} #{user.last_name}".titleize %></p>
                <!-- Replace 'user.email' with the attribute holding the user's email -->
                <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%= user.email %></p>
              </div>
            </div>
            <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
              <!-- Replace 'user.role' with the attribute holding the user's role -->
              <p class="text-sm leading-6 text-gray-900"><%= "User" %></p>
              <!-- Assuming you have a 'last_seen' attribute in your user model -->
              <p class="mt-1 text-xs leading-5 text-gray-500">Last seen <time datetime="<%= user.updated_at %>">3h ago</time></p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</main>