<article class="flex max-w-xl flex-col items-start justify-between" id="<%= dom_id blog %>">
  <div class="flex items-center gap-x-4 text-xs">
    <%= render partial: 'home/shared/tags', locals: { tags: blog.tags } %>
  </div>
  <!-- content -->
  <div class="group relative">
    <h2 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
      <%= blog.title %>
    </h2>
    <p class="mt-5 text-sm leading-6 text-gray-600"><%= blog.body %></p>
  </div>
  <!-- author -->
  <%= render partial:'home/shared/author', locals: { author: blog.author } %>
</article>