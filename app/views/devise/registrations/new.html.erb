<%= render "home/shared/header" %>
<% content_for(:auth_header) do %>
  <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Sign up</h2>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-6">
    <%= f.label :first_name, class: 'label-primary' %>
    <%= f.text_field :first_name, autofocus: true, class: 'input-box' %>
  </div>

  <div class="mb-6">
    <%= f.label :last_name, class: 'label-primary' %>
    <%= f.text_field :last_name, autofocus: true, class: 'input-box' %>
  </div>

  <div class="mb-6">
    <%= f.label :email, class: 'label-primary' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-box' %>
  </div>

  <div class="mb-6">
    <%= f.label :password, class: 'label-primary' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'input-box' %>
  </div>

  <div class="mb-6">
    <%= f.label :password_confirmation, class: 'label-primary' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input-box' %>
  </div>

  <div class="mb-4">
    <%= f.submit "Sign up", class: 'btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
